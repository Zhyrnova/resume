{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
{{#with heading}}
<div class="card">
    <div class="card-body">
        {{#with main}}
        <h1>{{title}}</h1>
        <p>{{text}}</p>
        {{#with button_text}}
        <button type="button" class="btn btn-primary">{{solid}}</button>
        <br>
        <br>
        <button type="button" class="btn btn-outline-primary">{{outline}}</button>
        {{/with}}
        {{/with}}
    </div>
</div>
<br>
<div class="card">
    <div class="card-body">
        {{#with second}}
        <h1>{{title}}</h1>
        <p>{{text}}</p>
        {{#with button_text}}
        <button type="button" class="btn btn-secondary">{{solid}}</button>
        <br>
        <br>
        <button type="button" class="btn btn-outline-secondary">{{outline}}</button>
        {{/with}}
        {{/with}}
    </div>
</div>
<br>
<div class="card">
    <div class="card-body">
        {{#with subblock}}
        <h1>{{title}}</h1>
        <p>{{text}}</p>
        {{#with button_text}}
        <button type="button" class="btn btn-dark">{{solid}}</button>
        <br>
        <br>
        <button type="button" class="btn btn-outline-dark">{{outline}}</button>
        {{/with}}
        {{/with}}
    </div>
</div>
{{/with}}
<hr>
{{#with nested_display}}
<div class="card">
    <div class="card-body">
        <div class="display-1">{{title}}</div>
        <br>
        {{#with children_display}}
        <div class="card">
            <div class="card-body">
                <div class="display-4">{{title}}</div>
                <br>
                <p>{{text}}</p>
                <button type="button" class="btn btn-outline-warning">{{button.text}}</button>
            </div>
        </div>
        <br>
        {{/with}}
        <h6>{{header_text}}</h6>
        <button type="button" class="btn btn-info">{{button.text}}</button>
    </div>
</div>
{{/with}}
<br>
{{#with paragraph}}
<div class="card">
    <div class="card-body">
        <p class="text-uppercase">{{title}}</p>
        <p>{{text}}</p>
        {{#with button}}
        <a href="https://google.com" class="btn btn-link">{{text}}</a>
        {{/with}}

        <div class="card">
            <div class="card-body">
                <ul>
                    {{#each list_name}}
                    <li>
                        <a href={{url}} class="btn btn-link">{{text}}</a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
{{/with}}
{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}