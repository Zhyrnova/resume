{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    {{#with navigation}}
    <div class="row">
        <div class="card">
            <div class="nav">
                {{#each links}}
                <div class="nav-item py-2">
                    <a href="{{href}}" class="nav-link 
                    {{#if @last includeZero=" true"}}disabled{{/if}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{/with}}

    {{#with header}}
    <h1 class="my-4">{{title}}</h1>
    {{#with button}}
    <button type="button" class="btn btn-outline-secondary mb-3" href={{link}}>{{text}}</button>
    {{/with}}
    {{/with}}
    <hr>
    <div class="row">
        {{#each goodsBlock}}
        <div class="card my-3">
            <div class="col-12">
                <div class="card-body row">
                    <div class="col-2"> <img class="card-img-top" src={{image}}></div>
                    <div class="col-4 my-2">
                        <h5 class="card-title">{{name}}</h5>
                        <p>{{description}}</p>
                    </div>
                    <div class="col-2 my-3">
                        {{#with price}}
                        <p>{{title}}</p>
                        <h5>{{value}}</h5>
                        {{/with}}
                    </div>
                    <div class="col-2 my-5">
                        <p>{{amount}}</p>
                    </div>
                    <div class="col-2 my-3">
                        {{#each buttons}}
                        <div class="mb-3">{{#if isPrimary}}<button type="button"
                                class="btn btn-primary">{{text}}</button>{{/if}}
                        </div>
                        <div>{{#if isDanger}}<button type="button"
                                class="btn btn-outline-danger">{{text}}</button>{{/if}}</div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <hr>
    {{#with total}}
    <h3 class="mt-5">{{title}}</h3>
    <h1>{{amount}}</h1>
    <p>{{delivery}}</p>
    {{#each buttons}}
    <div class="mb-3">
        {{#if isSuccess}}
        <button type="button" href="{{link}}" class="btn btn-success">
            {{text}}</button>
        {{/if}}
    </div>
    <div class="mb-3">
        {{#if isOutline}}
        <button type="button" class="btn btn-outline-success" href="{{link}}">
            {{text}}</button>
        {{/if}}
    </div>
    {{/each}}
    {{/with}}
    <hr class="my-5">
    {{#with goodsOtherBlock}}
    <h2 class="text-center">{{title}}</h2>
    <div class="row">
        {{#each cards}}
        <div class="col-4">
            <div class="card">
                <img class="card-img-top" src="{{image}}">
                <div class="card-body">
                    <h5 class="card-title">{{title}}
                        {{#if isHot}}
                        <span class="badge text-bg-warning rounded-pill">Hot</span>
                        {{else}} {{/if}}
                        {{#if idNew}}
                        <span class="badge text-bg-primary rounded-pill">New</span>
                        {{else}} {{/if}}
                    </h5>
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}
    <hr class="my-5">

    <div class="row mt-4">
        {{#with subscribe}}
        <div class="card text-bg-dark">
            <h2 class="card-title mt-3">{{header}}</h2>
            <p class="pb-3">{{description}}</p>
            <div class="col-3">
                {{#each buttons}}
                <a class="btn btn-primary mb-3" href={{link}}>{{text}}</a>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </div>
    <hr class="my-5">
    <div class="row">
        {{#each footer}}
        <div class="col-2">
            {{#each this}}
            <div class="nav flex-column">
                <div class="nav-item">
                    <a href={{link}} class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                </div>
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>

</main>

