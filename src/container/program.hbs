{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with program.excursion}}
    <div>
        <h1>{{name}}</h1>
    </div>
    <div>Location: {{location.city}}
        {{location.country}}
    </div>
    <div>Date: {{date}}</div>
    <br>
    <hr>
    <br>
    <div>
        {{#each program}}

        <div>
            <h2>{{this.name}}</h2>
        </div>
        <div>Type: {{this.type}}</div>
        <div>Duration: {{this.duration}} hours</div>
        <div>Details:
            {{#with details}}
            {{#with museum}}

            <div>Museum:</div>
            {{name}}
            <ul><b>Address:</b>
                {{#with location}}
                <li>
                    {{address}}
                    {{city}}
                    {{country}}
                </li>
                {{/with}}
            </ul>
            <ul><b>Exhibits:</b>
                {{#each exhibits}}
                <li>{{this.name}}
                    by {{this.artist}}
                    - {{this.description}}
                    {{#if this.audio_guide}} (Audio_guide available) {{/if}}
                </li>
                {{/each}}
            </ul>
            {{/with}}

            {{#with venue}}
            <div>{{name}}</div>
            <ul><b>Address:</b>
                {{#with location}}
                <li>
                    {{address}}
                    {{city}}
                    {{country}}
                </li>
                {{/with}}
            </ul>
            {{/with}}

            {{#if performers}}
            <ul><b>Performers:</b>
                {{#each performers}}
                <li><q>{{this.name}}</q> - {{this.type}}</li>
                {{/each}}
            </ul>
            {{/if}}



            <ul><b>Guide:</b>
                {{#with guide}}
                <li>
                    {{this.name}}
                    {{this.language}}
                    {{this.rating}} (stars)
                </li>
                {{/with}}
            </ul>
        </div>
        {{/with}}
    </div>
    {{/each}}
</div>
{{/with}}
</div>

