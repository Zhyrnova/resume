{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<main>
    {{#with header}}
    <div class="row">
        <div class="col-12">
            <div class="card text-bg-light">
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <h4>{{name}}</h4>
                        </div>
                        <div class="col-6">
                            <h4 class="text-end">{{title}}</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/with}}
    <br>
    <br>
    <br>
    {{#with actionBlock}}

    <div class="col-12">
        <div class="row">
            <h1>{{title}}</h1>
            <p>{{text}}</p>
            {{#each buttons}}
            <div class="col-2 m-2 text-center">
                <div class="row">
                    {{#if isPrimary}}<a href="{{link}}" class="btn btn-primary">{{text}}</a>{{/if}}
                </div>
            </div>{{/each}}
        </div>
    </div>
    {{/with}}
</main>


