{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<main>
    <br>
    <br>
    {{#with actionBlock}}

    <div class="col-12">
        <div class="row">
            <h1>{{title}}</h1>
            <p>{{text}}</p>
            {{#each buttons}}
            <div class="col-2 m-2 text-center">
                <div class="row">
                    {{#if isPrimary}}<a href="{{link}}" class="btn btn-primary">{{text}}</a>{{/if}}
                </div>
            </div>{{/each}}
        </div>
    </div>
    {{/with}}
</main>

