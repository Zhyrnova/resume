{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <div>
        <h1>{{name}}</h1>
    </div>
    <div>
        <b>Date and place of birth:</b> {{birthdate}}, <q>{{birthplace}}</q>
    </div>
    <div>
        <b>Date and place of death:</b> {{deathdate}}, <q>{{deathplace}}</q>
    </div>

    <br>

    <div>
        <b>Nationality:</b> {{nationality}}
    </div>
    <div>
        <b>Occupation:</b> {{occupation}}
    </div>
    <div>
        <b>Known for:</b>
        {{#each known_for}}
        <q>{{this}}</q>
        {{/each}}
    </div>

    <br>

    <hr>

    <br>

    <ul>
        {{#each education}}
        <li>
            <div>
                <strong>
                    {{degree}}
                    {{field}}
                    {{institution}}
                    {{year}}
                </strong>
            </div>
        </li>
        {{/each}}
    </ul>

    <br>

    <ul>
        {{#each notable_publications}}
        <li>
            <div>
                <b><q>{{title}}</q></b><br>
                {{year}}
                {{publisher}}
                <br>

            </div>
        </li>
        {{/each}}
    </ul>

    <br>

    <hr>

    <br>

    <ul>
        {{#each partners}}
        <li>
            <div><b>{{name}}</b></div>
            <div>{{relationship}}</div>
            <div>{{years}}</div>
            <br>

        </li>
        {{/each}}
    </ul>

    <br>

    <hr>

    <br>

    <section>
        {{#each awards}}
        <div>
            <strong>
                {{title}}
                {{year}}
                <q>{{description}}</q>
            </strong>
        </div>
        {{/each}}
    </section>

    <br>

    <hr>

    <br>

    <section>
        <div>
            <b>Influences:</b>
            {{#each influences}}
            {{this}},
            {{/each}}
        </div>

        <br>

        <div>
            <b>Influenced:</b>
            {{#each influenced}}
            {{this}},
            {{/each}}
        </div>

        <br>

        <div>
            <b>Quotes:</b>
            {{#each quotes}}
            <q>{{this}}</q><br>
            {{/each}}
        </div>
    </section>

    <br>

    <hr>

    <br>

    <section>
        {{#each major_discoveries}}

        <div>
            <b>{{title}}
                {{year}}</b>

            <br>

            <q>{{description}}</q>
        </div>

        {{/each}}
    </section>

    <br>

    <hr>

    <br>

    <section>
        {{#with contributions}}
        <div>
            <b>{{title}}</b><br>
            {{year}}<br>
            <q>{{description}}</q>
            {{field}}
        </div>
        {{/with}}
    </section>
</div>

