{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<main>
    {{#with navigation}}
    <div class="row">
        <div class="card">
            <div class="nav">
                {{#each links}}
                <div class="nav-item py-2">
                    <a href="{{href}}" class="nav-link 
                    {{#if @last includeZero=" true"}}disabled{{/if}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{/with}}
    <br>
    <br>
    {{#with formBlock}}
    <div class="row">
        <div class="col-8">
            <h1 class="mb-3">{{header}}</h1>
            {{#with rating}}
            <p>{{title}}: {{value}}</p>
            {{/with}}
            {{#with actionBlock}}
            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item">
                    <a class="nav-link {{#if isActive}}active{{/if}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
            <br>
            <hr>
            <br>
            {{#with report}}
            <div class="row">
                <div class="card">
                    <div class="card-body">
                        <p>{{title}}</p>
                        {{#with button}}
                        <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                        {{/with}}
                    </div>
                </div>
            </div>
            {{/with}}
            {{/with}}
            <br>
            <hr>
            <br>
            {{#with feedbackBlock}}
            <h2>{{title}}</h2>
            <br>
            <br>
            {{#each buttons}}
            {{#if isWarning}}<a href="{{link}}" class="btn btn-warning">{{text}}</a>{{/if}}
            {{#if isSuccess}}<a href="{{link}}" class="btn btn-success">{{text}}</a>{{/if}}
            {{#if isDanger}}<a href="{{link}}" class="btn btn-danger">{{text}}</a>{{/if}}
            {{/each}}
            {{/with}}
        </div>
        {{#with goodsInfo}}
        <div class="col-4">
            <div class="card my-3">
                <div class="card-body">
                    <img class="card-img-sm" src="{{photo}}">
                    <h5>{{name}}</h5>
                </div>
            </div>
            <div class="card my-3">
                <div class="card-body">
                    <h3>{{price}}</h3>
                    {{#if inMarket}}
                    Є в наявності
                    {{/if}}
                    {{#each buttons}}
                    <div>
                        {{#if isPrimary}}<a href="{{link}}" class="btn btn-primary">{{text}}</a>{{/if}}
                        {{#if isSecondary}}<a href="{{link}}" class="btn btn-secondary">
                            {{text}}</a>{{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    {{#with seller}}
                    <p>{{title}} : <b>{{value}}</b></p>
                    {{/with}}
                </div>
            </div>
        </div>
        {{/with}}
    </div>
    {{/with}}
    <br>
    <hr>
    <br>
    {{#each reviewList}}
    {{> reviewItem reviewList=reviewList}}
    {{/each}}
    {{#with service}}
    <div class="card text-bg-success">
        <div class="card-body text-center">
            <h2>{{title}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
            {{/each}}
        </div>
    </div>
    {{/with}}
    <hr class="my-5">
    <div class="row">
        {{#each footer}}
        <div class="col-2">
            {{#each this}}
            <div class="nav flex-column">
                <div class="nav-item">
                    <a href={{link}} class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                </div>
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>
</main>


