{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    <h1>{{name}}</h1>
    <div><b>Description:</b> {{description}}</div>
    <div>
        {{#with history}}
        <div><b>Year:</b> {{year}}</div>
        <div><b>Founder:</b> {{founder}}</div>
        {{/with}}
    </div>
    <div><b>Types:</b> {{types}}</div>
    <ul><b>Syntax:</b>
        {{#with syntax}}
        <li><b>Variables:</b> {{variables}}</li>
        <li><b>Functions:</b> {{functions}}</li>
        <li><b>Conditionals:</b> {{conditionals}}</li>
        <li><b>Loops:</b> {{loops}}</li>
        <li><b>Classes:</b> {{classes}}</li>
        {{/with}}
    </ul>
    <div><b>Features:</b> {{features}}</div>
    <br>
    <div><b>Libraries:</b> {{libraries}}</div>
    <br>
    <div><b>Tools:</b> {{tools}}</div>
    <br>
    <ul><b>Community:</b>
        {{#each community}}
        <li>{{this.name}} - {{this.type}}</li>
        {{/each}}
    </ul>

</div>

