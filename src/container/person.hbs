{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
    <div>
        <h1>{{name}}</h1>
    </div>
    <div>{{age}}</div>
    <div>{{gender}}</div>
    <div>
        <ul>
            {{#each address}}
            <li>
                <div>{{street}} {{city}} {{state}} {{zip}} {{country}}</div>
            </li>
            {{/each}}
        </ul>

        <br>

        <ul>
            {{#each education}}
            <li>
                <div>{{degree}} {{major}} {{university}} {{graduationYear}}</div>
            </li>
            {{/each}}
        </ul>

        <br>

        <ul>
            {{#each workExperience}}
            <li>
                <div>{{company}} {{title}} </div>
                <div>{{startDate from}}
                    {{endDate to}}
                </div>
                <div>{{graduationYear.text}}</div>
                <div>{{year_founded}}</div>
                <div>{{industry}}</div>
                <ul>
                    {{#each employees}}
                    <li>
                        <div>{{name}}</div>
                        <div>{{position}}</div>
                        <div>{{department}}</div>
                    </li>
                    <ul>
                        {{#each projects}}
                        <li>
                            <div>{{name}}</div>
                            <div>{{description}}</div>
                            <div>{{status}}</div>
                            <ul>
                                {{#each teams}}
                                <li>
                                    <div>{{team_name}}</div>
                                    <div>{{team_leader.name}}</div>
                                    <div>{{team_leader.title}}</div>
                                    <div>{{team_leader.email}}</div>

                                    <ul>
                                        {{#each team_members}}
                                        <li>
                                            <div>{{name}}</div>
                                            <div>{{title}}</div>
                                            <div>{{email}}</div>
                                            <div>{{skills}}</div>
                                            <ul>
                                                {{#each projects}}
                                                <li>
                                                    <div>{{name}}</div>
                                                    <div>{{description}}</div>
                                                    <div>{{technologies}}</div>
                                                    <ul>
                                                        {{#each team_members}}
                                                        <li>
                                                            <div>{{name}}</div>
                                                            <div>{{title}}</div>
                                                            <br>
                                                            <div>{{name}}</div>
                                                            <div>{{title}}</div>
                                                        </li>
                                                        {{/each}}
                                                    </ul>
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/each}}
                            </ul>
                        </li>
                        {{/each}}
                    </ul>
                    {{/each}}
                </ul>
            </li>
            {{/each}}
        </ul>

    </div>
    {{/with}}
</div>

