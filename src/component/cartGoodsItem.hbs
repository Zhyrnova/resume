<div class="card my-3">
    <div class="row">
        <div class="col-2"> <img class="card-img-top mt-3" src={{image}}></div>
        <div class="col-4 my-4">
            <h5 class="card-title">{{name}}</h5>
            <p>{{description}}</p>
        </div>
        <div class="col-2 my-5">
            {{#with price}}
            <p>{{title}}</p>
            <h5>{{value}}</h5>
            {{/with}}
        </div>
        <div class="col-2 my-5">
            <p>{{amount}}</p>
        </div>
        <div class="col-2 my-3">
            {{#each buttons}}
            <div class="pt-4">{{#if isPrimary}}<button type="button" class="btn btn-primary">{{text}}</button>{{/if}}
            </div>
            <div>{{#if isDanger}}<button type="button" class="btn btn-outline-danger">{{text}}</button>{{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</div>