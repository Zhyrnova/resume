<div class="card-body row">
    <div class="col-2"> <img class="card-img-top" src={{image}}></div>
    <div class="col-4 my-2">
        <h5 class="card-title">{{name}}</h5>
        <p>{{description}}</p>
    </div>
    <div class="col-2 my-3">
        {{#with price}}
        <p>{{title}}</p>
        <h5>{{value}}</h5>
        {{/with}}
    </div>
    <div class="col-2 my-5">
        <p>{{amount}}</p>
    </div>
    <div class="col-2 my-3">
        {{#each buttons}}
        <div class="mb-3">{{#if isPrimary}}<button type="button" class="btn btn-primary">{{text}}</button>{{/if}}
        </div>
        <div>{{#if isDanger}}<button type="button" class="btn btn-outline-danger">{{text}}</button>{{/if}}
        </div>
        {{/each}}
    </div>
</div>